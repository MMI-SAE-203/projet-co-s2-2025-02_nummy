---
import Layout from "../layouts/Layout.astro";
import imagetelephone from "../assets/img/imagetelephone.avif";

import { Image } from "astro:assets";
---

<Layout>
    <h1 class="p-8">NOUS CONTACTER !</h1>
    <h2 class="">
        Avez-vous des questions, des doutes, des plaintes ou des réclamations ?
        ÉCRIVEZ-NOUS !
    </h2>

    <Image
        src={imagetelephone}
        alt="Image téléphone sur la page de contact"
        class="w-50 lg:w-105"
        loading="lazy"
    />

    <div class="space-y-9 p-8 max-w-lg mx-auto block space-x-0">
        <label class="block">
            <span class="">NOM</span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="Indiquez votre nom"
            />
        </label>
        <label class="block">
            <span class="">PRÉNOM</span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="Indiquez votre prénom"
            />
        </label>
        <label class="block">
            <span class="">TÉLÉPHONE </span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="ex : 07 xx xx xx xx"
            />
        </label>
        <label class="block">
            <span class="">E-MAIL </span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="Ex: email@exemple.com"
            />
        </label>
        <label class="block">
            <span class="">SUJET </span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="Veuillez indiquer le sujet de votre message"
            />
        </label>
        <label class="block">
            <span class="">MESSAGE </span>
            <input
                type="text"
                class="mt-1 block w-full rounded-lg bg-gray-200 p-2"
                placeholder="Veuillez indiquer vos messages ici"
            />
        </label>

        <div class="">
            <button
                type="submit"
                class="inline-flex items-center
          lg:px-8 rounded-full text-black text-center bg-[var(--color-orange)] font-bold"
            >
                ENVOYER
            </button>
        </div>
    </div>
</Layout>
